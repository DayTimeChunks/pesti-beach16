issn = {0013936X},
journal = {Environmental Science and Technology},
number = {5},
pages = {1588--1596},
pmid = {16568774},
title = {{Does the Rayleigh equation apply to evaluate field isotope data in contaminant hydrogeology?}},
volume = {40},
year = {2006}
}
