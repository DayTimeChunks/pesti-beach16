journal = {Ecosystems},
keywords = {15N,18O,Nitrate,catchment,deposition,dual isotopes,nitrogen saturation},
number = {6},
pages = {1021--1037},
title = {{What Have Stable Isotope Studies Revealed About the Nature and Mechanisms of N Saturation and Nitrate Leaching from Semi-Natural Catchments?}},
volume = {14},
year = {2011}
}
