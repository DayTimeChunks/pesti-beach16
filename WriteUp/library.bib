doi = {10.1065/espr2004.08.213},
file = {:C$\backslash$:/Users/pablo/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Chaudhry et al. - 2005 - Utilising the synergy between plants and rhizosphere microorganisms to enhance breakdown of organic pollutants.pdf:pdf},
isbn = {0944-1344 (Print)$\backslash$r0944-1344 (Linking)},
