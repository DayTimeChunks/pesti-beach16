issn = {10991085},
journal = {Hydrological Processes},
keywords = {Groundwater and surface water interactions,Hydrograph separation,Isotopes,Nutrients},
number = {4},
pages = {648--660},
title = {{Continuous monitoring of stream $\delta$18O and $\delta$2H and stormflow hydrograph separation using laser spectrometry in an agricultural catchment}},
